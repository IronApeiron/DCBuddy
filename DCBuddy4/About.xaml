        <Label x:Name="lblVersion" Content="Version: 0.1.1.0" HorizontalAlignment="Left" Margin="58,94,0,0" VerticalAlignment="Top" Foreground="#FF8D8585" Width="89"/>
        <Label x:Name="lblVersion_Copy" Content="| Laputa Series | ALPHA" HorizontalAlignment="Left" Margin="142,94,0,0" VerticalAlignment="Top" Foreground="#FF8D8585"/>
