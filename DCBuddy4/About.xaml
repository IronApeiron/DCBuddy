        <TextBlock  x:Name="textBlock" HorizontalAlignment="Left" Margin="215,177,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="21">
                <Hyperlink NavigateUri="mailto:quickcodeforge@gmail.com" RequestNavigate="Hyperlink_RequestNavigate">
                    quickcodeforge@gmail.com
                </Hyperlink>
        </TextBlock>
        <Label x:Name="lblLoggedInAs" Content="Logged in as: " HorizontalAlignment="Left" Margin="87,68,0,0" VerticalAlignment="Top" Foreground="#FF8D8585"/>
    </Grid>
</Controls:MetroWindow>
